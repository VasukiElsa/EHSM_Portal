<mvc:View
    controllerName="eshmbtpportal.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    displayBlock="true">

    <Page
        id="homePage"
        class="sapUiResponsiveContentPadding dashboardPageBackground">

        <customHeader>
            <Bar class="dashboardHeader">
                <contentLeft>
                    <Title text="EHSM Dashboard" class="dashboardTitle" />
                </contentLeft>
                <contentRight>
                    <Button
                        id="logoutButton"
                        text="Logout"
                        press="onLogoutPress"
                        icon="sap-icon://log"
                        type="Reject" />
                </contentRight>
            </Bar>
        </customHeader>

        <content>
            <l:Grid
                defaultSpan="L4 M6 S12"
                hSpacing="2"
                vSpacing="2"
                class="sapUiMediumMarginTop">

                <GenericTile
                    header="Incident Management"
                    press="onIncidentTilePress"
                    frameType="OneByOne"
                    class="tileShadow">
                    <tileContent>
                        <TileContent>
                            <content>
                                <VBox justifyContent="Center" alignItems="Center">
                                    <core:Icon src="sap-icon://warning" size="3rem" color="#e74c3c" class="sapUiTinyMarginBottom tileIcon"/>
                                    <Text text="Manage incidents efficiently." class="sapUiTinyMarginTop sapMText-Bold sapMText-Text darkText"/>
                                </VBox>
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>

                <GenericTile
                    header="Risk Assessment"
                    press="onRiskTilePress"
                    frameType="OneByOne"
                    class="tileShadow">
                    <tileContent>
                        <TileContent>
                            <content>
                                <VBox justifyContent="Center" alignItems="Center">
                                    <core:Icon src="sap-icon://shield" size="3rem" color="#f39c12" class="sapUiTinyMarginBottom tileIcon"/>
                                    <Text text="Assess and mitigate risks." class="sapUiTinyMarginTop sapMText-Bold sapMText-Text darkText"/>
                                </VBox>
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>

            </l:Grid>
        </content>
    </Page>
</mvc:View>